<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
        bootstrap="tests/bootstrap.php"
        colors="true"
        stopOnFailure="true"
        verbose="true"
>
    <testsuites>
        <testsuite name="Annotation">
            <directory>tests/Annotation</directory>
        </testsuite>
        <testsuite name="Fluid">
            <directory>tests/Fluid</directory>
        </testsuite>
        <testsuite name="Extbase">
            <directory>tests/Extbase</directory>
        </testsuite>
        <testsuite name="Core">
            <directory>tests/Core</directory>
        </testsuite>
        <testsuite name="Frontend">
            <directory>tests/Frontend</directory>
        </testsuite>
    </testsuites>
</phpunit>
