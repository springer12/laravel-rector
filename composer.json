{
    "name": "ssch/typo3-rector",
    "description": "Instant fixes for your TYPO3 code by using Rector.",
    "type": "library",
    "authors": [
        { "name": "Sebastian Schreiber", "email": "breakpoint@schreibersebastian.de" }
    ],
    "bin": ["bin/typo3_rector"],
    "require": {
        "php": "^7.2",
        "rector/rector": "^0.7.17",
        "typo3fluid/fluid": "^2.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "Ssch\\TYPO3Rector\\": "src"
        },
        "classmap": ["classes"]
    },
    "autoload-dev": {
        "psr-4": {
            "Ssch\\TYPO3Rector\\Tests\\": "tests"
        },
        "classmap": [".code"]
    },
    "license": "MIT",

    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "update-with-dependencies": true,
        "sort-packages": true
    },
    "scripts": {
        "check-style": "./vendor/bin/php-cs-fixer fix --config=./.php_cs.dist --dry-run",
        "fix-style": "./vendor/bin/php-cs-fixer fix --config=./.php_cs.dist",
        "analyze": "./vendor/bin/phpstan analyse src --level=4 --memory-limit=-1",
        "test": "vendor/bin/phpunit",
        "docs": [
            "./bin/typo3_rector generate-docs -o typo3-markdown > docs/AllRectorsOverview.md"
        ]
    },
    "scripts-descriptions": {
        "docs": "Regenerate descriptions of all Rectors to docs/AllRectorsOverview.md file"
    }
}
