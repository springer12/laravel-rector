{
    "name": "ssch/typo3-rector",
    "description": "Instant fixes for your TYPO3 code by using Rector.",
    "type": "library",
    "require": {
        "rector/rector": "^0.6.0",
        "typo3fluid/fluid": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Ssch\\TYPO3Rector\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ssch\\TYPO3Rector\\Tests\\": "tests"
        },
        "classmap": [
            ".code"
        ]
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^7.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Schreiber",
            "email": "breakpoint@schreibersebastian.de"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "update-with-dependencies": true,
        "sort-packages": true
    },
    "scripts": {
        "check-style": "./vendor/bin/php-cs-fixer fix --config=./.php_cs.dist --dry-run",
        "fix-style": "./vendor/bin/php-cs-fixer fix --config=./.php_cs.dist",
        "test": "vendor/bin/phpunit"
    }
}
